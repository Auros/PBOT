<vertical spacing="1" horizontal-fit="PreferredSize" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd">
  <increment-setting text="Precision" value="precision" integer-only="true" min="1" max="3" increment="1" apply-on-change="true" hover-hint="The precision of the percentage." />
  <color-setting text="Default Color" value="default-color" apply-on-change="true" hover-hint="The color of the counter when you are not being your personal best." />
  <color-setting text="Beating Score Color" value="beating-score-color" apply-on-change="true" hover-hint="The color of the counter when you are beating your score at that specific time." />
  <checkbox-setting text="Use Difference" value="show-difference" apply-on-change="true" hover-hint="When enabled, the number shown is the difference between your current accuracy and personal best." />
</vertical>